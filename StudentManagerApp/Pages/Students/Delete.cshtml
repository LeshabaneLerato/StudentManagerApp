@page "{id:int}"
@model StudentManagerApp.Pages.Students.DeleteModel

<div class="container mt-4">

    <div class="card shadow rounded-4 p-4 border-danger">
        <h2 class="text-danger mb-3">❌ Delete Student</h2>

        <p>
            Are you sure you want to delete this student?
        </p>

        <h4 class="text-dark">@Model.Student.Name</h4>

        <form method="post">
            <input type="hidden" asp-for="Student.Id" />

            <button type="submit" class="btn btn-danger">
                Yes, Delete
            </button>

            <a asp-page="Index" class="btn btn-secondary ms-2">
                Cancel
            </a>
        </form>
    </div>

</div>
