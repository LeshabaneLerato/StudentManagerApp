@page "{id:int}"
@model StudentManagerApp.Pages.Students.EditModel

<div class="container mt-4">

    <div class="card shadow rounded-4 p-4">
        <h2 class="text-primary mb-3">✏️ Edit Student</h2>

        <form method="post">
            <input type="hidden" asp-for="Student.Id" />

            <div class="mb-3">
                <label class="form-label">Student Name</label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name"
                      class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                Update Student
            </button>

            <a asp-page="Index" class="btn btn-secondary ms-2">
                Cancel
            </a>
        </form>
    </div>

</div>
